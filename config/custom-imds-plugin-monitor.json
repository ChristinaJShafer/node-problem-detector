{
  "plugin": "custom",
  "pluginConfig": {
    "invoke_interval": "60s",
    "timeout": "5s",
    "max_output_length": 80,
    "concurrency": 3,
    "enable_message_change_based_condition_update": false
  },
  "source": "imds-scheduled-event-custom-plugin-monitor",
  "metricsReporting": true,
  "conditions": [
    {
      "type": "ScheduledEvent",
      "reason": "NoScheduledEvent",
      "message": "No scheduled events from IMDS"
    }
  ],
  "rules": [
    {
      "type": "temporary",
      "condition": "ScheduledEvent",
      "reason": "Scheduled Event for EventType=Freeze",
      "path": "./config/plugin/check_imds_event.sh -t Freeze",
      "timeout": "30s"
    },
    {
      "type": "temporary",
      "condition": "ScheduledEvent",
      "reason": "Scheduled Event for EventType=Reboot",
      "path": "./config/plugin/check_imds_event.sh -t Reboot",
      "timeout": "30s"
    },
    {
      "type": "permanent",
      "condition": "ScheduledEvent",
      "reason": "Scheduled Event for EventType=Redeploy",
      "path": "./config/plugin/check_imds_event.sh -t Redeploy",
      "timeout": "30s"
    },
    {
      "type": "permanent",
      "condition": "ScheduledEvent",
      "reason": "Scheduled Event for EventType=Terminate",
      "path": "./config/plugin/check_imds_event.sh -t Terminate",
      "timeout": "30s"
    }
  ]
}
